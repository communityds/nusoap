<?xml version="1.0" encoding="UTF-8"?>
<ruleset>
    <rule ref="CDS">
        <exclude name="CDS.Commenting.DocComment.LongNotCapital"/>
        <exclude name="CDS.Commenting.DocComment.ShortNotCapital"/>
        <exclude name="CDS.Commenting.FunctionComment.ParamCommentNotCapital"/>
        <exclude name="CDS.Strings.ComplexVariableSyntax.SimpleSyntax"/>
        <exclude name="Generic.Files.LineLength.TooLong"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
        <exclude name="SlevomatCodingStandard.ControlStructures.AssignmentInCondition.AssignmentInCondition"/>
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
    </rule>

    <rule ref="PHPCompatibility"/>
    <config name="testVersion" value="5.6-8.1"/>
    <config name="testBootstrap" value="vendor/autoload.php"/>

    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
